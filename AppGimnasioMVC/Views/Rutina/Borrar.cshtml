@model AppGimnasioMVC.Models.Rutina
@{
    ViewData["Title"] = "Borrar Rutinas";
}

<div class="row">
    <div class="col-sm-7 offset-2">
        <div class="card border">
            <div class="card-header">
                <h2 class="text-info">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Rutina" asp-action="BorrarRegistro" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!--Enviar el ID del cliente como campo oculto-->
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Codigo" class="control-label"></label>
                        <input asp-for="Codigo" class="form-control" placeholder="Ingresar el código de la rutina." readonly />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreRutina" class="control-label"></label>
                        <input asp-for="NombreRutina" class="form-control" placeholder="Ingresar el nombre de la rutina." readonly />
                        <span asp-validation-for="NombreRutina" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ejercicio1" class="form-label mt-4"></label>
                        <textarea class="form-control" asp-for="Ejercicio1" rows="7" readonly></textarea>
                        <span asp-validation-for="Ejercicio1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ejercicio2" class="form-label mt-4"></label>
                        <textarea class="form-control" asp-for="Ejercicio2" rows="7" readonly></textarea>
                        <span asp-validation-for="Ejercicio2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ejercicio3" class="form-label mt-4"></label>
                        <textarea class="form-control" asp-for="Ejercicio3" rows="7" readonly></textarea>
                        <span asp-validation-for="Ejercicio3" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ejercicio4" class="form-label mt-4"></label>
                        <textarea class="form-control" asp-for="Ejercicio4" rows="7" readonly></textarea>
                        <span asp-validation-for="Ejercicio4" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ejercicio5" class="form-label mt-4"></label>
                        <textarea class="form-control" asp-for="Ejercicio5" rows="7" readonly></textarea>
                        <span asp-validation-for="Ejercicio5" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cardio" class="form-label mt-4"></label>
                        <textarea class="form-control" asp-for="Cardio" rows="7" readonly></textarea>
                        <span asp-validation-for="Cardio" class="text-danger"></span>
                    </div>
                    <div class="form-check form-switch">
                        <label class="form-check-label" asp-for="Bloqueado"></label>
                        <input class="form-check-input" type="checkbox" asp-for="Bloqueado" readonly />
                        <span asp-validation-for="Bloqueado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Borrar Rutina</button>
                        <a asp-action="Index" class="btn btn-primary">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}